/*搜索输入容器相关*/
.section{
  height: 30px;
  width: 100%;
  display: flex;
  justify-content:flex-start;
}

.section image{
  width:30px;
  height: 35px;
  /*margin: 2px;*/
}

.section input{
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  font-size: 14px;
  width:95%;
  margin:0px auto;
  border:1px solid #c3c3c3;
  height:30px;
  border-radius: 3px;
  padding: 0 5px;
}