/**app.wxss**/
@import 'weui/weui.wxss';
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/*添加按钮相关*/
.addButtonContainer{
  width: 100%;
  height:200px;
  position: fixed;
  display: flex;
  justify-content:flex-end;
}

.addButton{
  width: 50px;
  height: 50px;
  border: 1px solid #746868;
  border-radius: 250px;
  position: fixed;
  bottom: 20px;
  right: 20px;
}

.addimage{
  width: 50px;
  height: 50px;
  margin-left: -15px;
}

.showorhide_show{
  position: fixed;
  display: block;
}

.showorhide_hide{
  position: fixed;
  display: none;
}

.publish1{
  width: 40px;
  height: 40px;
  border-radius: 250px;
  position: fixed;
  bottom: 100px;
  right: 15px;
}

#addbtn image{
  width: 52px;
  height: 52px;
  margin-left: -20px;
  margin-top: -6px;
}

