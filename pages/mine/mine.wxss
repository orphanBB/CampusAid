/*头像栏相关*/
.container{
  margin: 0 auto;
  margin-top: 10px;
  background-color: rgba(233, 227, 227, 0.3);
  width: 98%;
  box-shadow:  0 2px 6px rgba(100, 100, 100, 0.3);
  padding: 15px;
  
}

.userinfo {
  margin-left: -220px;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  float: left;
}

.userinfo-nickname {
  margin-top: 15%;
  color: #000000;
  float: left;
}

.more_info{
  position: absolute;
  top: 45px;
  right: 10px;
  width: 20px;
  height: 20px;
}

/*列表相关*/
.ol-contianer{
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  font-size: 14px;
  width: 100%;
  margin-top: 50px;
}

.li-contianer{
  margin-top: 10px;
  margin-left: 2%;
  margin-right: 2%;
  height: 50px;
  background-color:  #35baeeda;
  border-radius: 5px;
  border: 1px solid #35baee;
  text-align: left;
}

.set-contianer{
  margin-top: 50px;
  margin-left: 2%;
  margin-right: 2%;
  height: 50px;
  background-color:  #35baeeda;
  border-radius: 5px;
  border: 1px solid #35baee;
  text-align: left;
}