}

/*列表相关*/
.ol-contianer{
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  font-size: 14px;
  width: 100%;
  margin-top: 50px;
}

.li-contianer{
  margin-top: 10px;
  margin-left: 2%;
  margin-right: 2%;
  height: 50px;
  background-color:  #35baeeda;
  border-radius: 5px;
  border: 1px solid #35baee;
  text-align: left;
}

.set-contianer{
  margin-top: 50px;
  margin-left: 2%;
  margin-right: 2%;
  height: 50px;
  background-color:  #35baeeda;
  border-radius: 5px;
  border: 1px solid #35baee;
  text-align: left;
}