/*头像栏相关*/
.container{
  margin: 0 auto;
  margin-top: 10px;
  background-color: rgba(233, 227, 227, 0.3);
  width: 98%;
  box-shadow:  0 2px 6px rgba(100, 100, 100, 0.3);
  padding: 15px;
  
}

.userinfo {
  margin-left: -120px;
}

.defaultheadimg
{
  margin-left: -26rpx;
  width: 128rpx;
  height: 128rpx;
}

.userheadimg{
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  float: left;
}

.userheadimg::after{
  border: none;
}

.login_btn{
  margin-top: 18px;
  width: 100px;
  height: 30px;
  font-family: 'Times New Roman',Cambria, Cochin, Georgia, Times,  serif;
  font-size: 12px;
  float: left;
}

.login_btn::after{
  border: none;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  float: left;
}

.userinfo-nickname {
  margin-top: 15%;
  color: #000000;
  float: left;
}

.more_info{
  position: absolute;
  top: 45px;
  right: 10px;
  width: 20px;
  height: 20px;
}

