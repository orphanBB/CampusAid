/**index.wxss**/
/*位置相关*/
.locationcontainer{
  margin: 3px auto 3px auto;
  widows: 100%;
  height: 30px;
}
.locationcontainer image{
  margin-top: 5px;
  width: 20px;
  height: 20px;
  float: left;
}
.locationcontainer text{
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  font-size: 12px;
}
.locationtext{
  position: relative;
  float: left;
}

/*菜单相关*/
.menu{
  margin: 20px auto auto 5%;
  width: 90%;
  height: auto;
  border: 0 solid #ffffff;
}

.menuicon{
 margin-top: 20px;
display: flex;
flex-direction:row;
justify-content:flex-end;
}

.circle{
    width: 50px;
    height: 50px;
    border: 0 solid #ffffff;
    border-radius: 250px; 
    font-size:0;
}

.image{
  margin-left:-15px;
  display: flex;
  width: 50px;
  height: 50px;
}

.textls{
  margin-top: 5px;
  display: flex;
  flex-direction:row;
}

.viewclass{
  width: 100px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  font-size: 12px;
}

/*内容相关*/
.main-content{
    margin: 0 auto;
    width: 90%;
    min-width: 250px;
    background-color: rgba(233, 227, 227, 0.3);
    padding: 10px;
    margin-top: -50px;
    box-shadow: 0 2px 6px rgba(100, 100, 100, 0.3);
}

.content{
  margin: -10px;
  background-color: rgba(233, 227, 227, 0.123);
  box-shadow: 0 2px 6px rgba(100, 100, 100, 0.2);
  margin-bottom: 20px;
}

.content-title{
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: 16px;
  color: #4fccf1;
}

.content-body{
  margin-top: 10px;
  font-family:'Courier New', Courier, monospace;
  font-size: 12px;
  color: rgba(0, 0, 0, 0.7);
}

.content-remark{
  margin-top: 20px;
}

.content-remark input{
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  font-size: 14px;
  width:85%;
  border:1px solid #c3c3c3;
  height:30px;
  border-radius: 3px;
  padding: 0 5px;
  float: left;
}

.content-remark button{
  width: 30px;
  height: 30px;
  border: 0 solid #000000;
  border-radius: 250px;
}

.content image{
  margin:auto auto auto -10px;
  width: 30px;
  height: 30px;
  margin-left: -15px;
}


