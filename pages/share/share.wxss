/* pages/add/add.wxss */
/*搜索相关*/
.weui-search-bar{
  margin:0 auto; 
  position: fixed;
  width: 100%;
  margin-top: -50px;
  background-color:rgba(239, 239, 240, 1);
}

/*内容相关*/
.main-content{
  width: 98%;
  background-color: rgba(223, 219, 219, 0.5);
  margin-left: 2px;
  margin-top: 50px;
  border: 1px solid rgba(148, 147, 147, 0.61);
  border-radius: 5px;
}

.content{
  width: 98%;
  border-radius: 5px;
  background-color: rgb(255, 255, 255);
  margin-top: 5px;
  margin-left: 4px;
  margin-bottom: 10px;
}

.content-title{
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: 14px;
  color: #4fccf1;
  margin-top: 5px;
}

.content-user{
  padding-top: 5px;
  padding-left: 20px; 
  display: flex;
  flex-direction: row;
  justify-content: left;
}

.user-head{
  width: 30px;
  height: 30px;
}

.user-head image{
  margin:auto auto auto -10px;
  width: 30px;
  height: 30px;
  margin-left: -15px;
}

.user-name{
  font-size: 14px;
  margin-left: -10px;
  margin-top: 5px;
}

.content-body{
  width: 98%;
  margin-left: 5px;
  font-family:'Courier New', Courier, monospace;
  font-size: 12px;
  color: rgba(0, 0, 0, 0.7);
}

.content-remark{
  margin-top: 20px;
  height: 80rpx;
}

.content-remark input{
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  font-size: 14px;
  width: 60%;
  border:1px solid #c3c3c3;
  height:60rpx;
  border-radius: 3px;
  padding: 0 5px;
  float: left;
  margin-left: 20rpx;
  margin-top: 10rpx;
}

.passagebutton{
  width: 50%;
  float: left;
  margin-left: 500rpx;
  margin-top: -60rpx;
}

.content-remark button{
  background-color: rgba(255, 255, 255, 0);
  margin-left: 15rpx;
  width: 30rpx;
  height: 45rpx;
  float: left;
}

.content-remark button:after{
  border: none;
}

.passagebutton image{
  margin-bottom: 20rpx;
  margin-left: -25rpx;
  width: 40rpx;
  height: 40rpx;
}